#:import utils kivy.utils

<SelectableButton>:
    background_color: 233, 235, 237, 1
    color: utils.get_color_from_hex("#000000")
  

<CustomerTable>
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            canvas:
                Color:
                    rgba: utils.get_color_from_hex("#000000")
                Rectangle:
                    pos: self.pos
                    size: self.size 
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 4

            Label:
                text: "#"
            Label:
                text: "Name"
            Label:
                text: "Age"
            Label:
                text: "Team"
        ScrollView:        
            BoxLayout:
                canvas:
                    Color:
                        rgba: utils.get_color_from_hex("#E9EBED")
                    Rectangle:
                        pos: self.pos
                        size: self.size    
                RecycleView:
                    viewclass: 'SelectableButton'
                    data: [{'text': str(x)} for x in root.data_items]
                    SelectableRecycleGridLayout:
                        cols: 4
                        default_size: None, dp(26)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        multiselect: True
                        touch_multiselect: True