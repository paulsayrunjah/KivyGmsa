#:import utils kivy.utils

<Customer>
    BoxLayout:
        canvas:
            Color:
                rgba: utils.get_color_from_hex('#DEDEDE')
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"
        padding: 20
        spacing: 10
        BoxLayout:
            canvas:
                Color:
                    rgba: utils.get_color_from_hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: .1
            padding: 10
            spacing: 2 
            Label:
                size_hint_x: .4
                text: "CUSTOMERS"
                font_size: 20
                color: utils.get_color_from_hex("#000000")
            TextInput:
                size_hint_x: .4
            Button:
                size_hint_x: .1
                text: "Search"
            Button:
                size_hint_x: .1
                text: "ADD"
                on_press: root.show_add_customer()
        CustomerTable:
            size_hint_y: .9    

    